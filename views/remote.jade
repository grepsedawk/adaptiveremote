doctype html
html
  head
    title Roku Remote
    link(rel="stylesheet", href="/stylesheets/remote.css")
  body
    .remote-container
      h1 Roku Remote Control

      //- Home button with new symbol (⌂)
      button.home(onclick="sendKey('Home')") ⌂

      //- D-Pad buttons with new symbols
      .dpad-container
        button.dpad.dpad-up(onclick="sendKey('Up')") ▲
        button.dpad.dpad-left(onclick="sendKey('Left')") ⮜
        button.dpad.dpad-select(onclick="sendKey('Select')") ⚪
        button.dpad.dpad-right(onclick="sendKey('Right')") ➤
        button.dpad.dpad-down(onclick="sendKey('Down')") ▼

      //- Back and Play buttons in the same row with new symbols
      .row-back-play
        button.back(onclick="sendKey('Back')") ⏎
        button.play(onclick="sendKey('Play')") ➤▐▐

      //- Launch buttons
      button.launch(onclick="fetch('/remote/launch/12/70176514/series')") Launch Naruto
      button.launch(onclick="fetch('/remote/launch/12/80180046/series')") Launch Grey's Anatomy

    script.
      function sendKey(key) {
        fetch(`/remote/key/${key}`)
          .then(response => {
            if (!response.ok) {
              console.error('Failed to send key:', key);
            } else {
              console.log('Key sent successfully:', key);
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
